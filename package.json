{
	"name": "salmonStatHQ",
	"version": "0.1.1-beta.6",
	"description": "Splatoon2のSalmonRun記録用アプリ",
	"private": true,
	"dependencies": {
		"eslint-config-eslint": "^4.0.0",
		"prop-types": "^15.6.1",
		"react": "^16.4.0",
		"react-dom": "^16.4.0",
		"react-scripts": "1.1.4",
		"webpack": "^3.12.0"
	},
	"build": {
		"appId": "com.kent-and-co.salmonstathq",
		"mac": {
			"target": "zip",
			"icon": "icondata/salmonhq.icns"
		},
		"win": {
			"target": {
				"target": "nsis",
				"arch": [
					"x64",
					"ia32"
				]
			},
			"icon": "icondata/salmonhq.ico"
		},
		"publish": [
			{
				"provider": "github",
				"releaseType": "release",
				"owner": "sasagar",
				"publishAutoUpdate": "true"
			}
		],
		"directories": {
			"output": "../dist"
		},
		"electronVersion": "2.0.2",
		"extends": null
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test --env=jsdom",
		"eject": "react-scripts eject",
		"electron": "node_modules/.bin/electron .",
		"dev": "nf start -p 3000",
		"package:mac": "electron-packager . salmonStatHQ --platform=darwin --arc=x64 --out=release --icon=./icondata/salmonhq.icns",
		"package:win": "electron-packager . salmonStatHQ --platform=win32 --arc=x64,x32 --out=release --icon=./icondata/salmonhq.ico",
		"package": "npm run package:mac && npm run package:win",
		"release": "build -mw",
		"clean": "rm -rf ../dist",
		"clean:osx": "rm -rf ../dist/darwin",
		"clean:win": "rm -rf ../dist/darwin/win-unpacked",
		"pack": "npm run pack:osx && npm run pack:win",
		"pack:osx": "npm run clean:osx && electron-packager . TAcalExporter --out=../dist/darwin --platform=darwin --arch=x64 --version=2.0.2 --icon=build/icon.icns",
		"pack:win": "npm run clean:win && electron-packager . TAcalExporter --out=../dist/darwin --platform=win32 --arch=ia32 --version=2.0.2 --icon=build/icon.ico",
		"ebuild": "npm run build:osx && npm run build:win",
		"ebuild:osx": "npm run clean:osx && electron-builder '../dist/darwin/TAcalExporter-darwin-x64/TAcalExporter.app' --platform=mac --config=builder.json",
		"ebuild:win": "npm run clean:win && electron-builder '../dist/darwin/TAcalExporter-win32-x64' --platform=win --config=builder.json",
		"archive": "npm run archive:osx && npm run archive:win",
		"archive:osx": "npm run build:osx && zip -j '../dist/darwin/TAcalExporter-osx.zip' '../dist/darwin/TAcalExporter.dmg'",
		"archive:win": "npm run build:win && zip -j '../dist/darwin/TAcalExporter-win.zip' '../dist/darwin/TAcalExporter.exe'",
		"make:mac": "electron-packager . TAcalExporter --platform=darwin --arch=x64 --electron-version=2.0.2 --icon=build/icon.icns --overwrite",
		"make:win": "electron-packager . TAcalExporter --platform=win32 --arch=x64 --electron-version=2.0.2 --icon=build/icon.ico --overwrite"
	},
	"devDependencies": {
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.3",
		"babel-loader": "^7.1.4",
		"babel-preset-env": "^1.7.0",
		"babel-preset-react": "^6.24.1",
		"electron": "^2.0.2",
		"electron-builder": "^20.15.1",
		"electron-packager": "^12.1.0",
		"eslint": "^4.19.1",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-plugin-import": "^2.12.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-react": "^7.9.1",
		"foreman": "^3.0.0",
		"webpack-cli": "^2.1.5",
		"webpack": "^4.0.0"
	},
	"main": "src/electron-starter.js",
	"homepage": "./",
	"repository": "github:sasagar/salmonstatHQ",
	"author": "SASAGAWA, Kiyoshi",
	"license": "GPL-3.0"
}
